  # 渐变：[UIColor.blackColor(), UIColor.orangeColor()].gradient()
  pod 'Hue'
  
  # 快速使用userdefault
  # 例子：
  # Defaults[key: colorKey] = "red"
  # Defaults[key: colorKey]
  pod 'SwiftyUserDefaults', '~> 5.0'
  
