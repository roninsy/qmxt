  #  Log.trace("Called!!!")
  #  Log.debug("Who is self:", self)
  #  Log.info(some, objects, here)
  #  Log.warning(one, two, three, separator: " - ")
  #  Log.error(error, terminator: "😱😱😱\n")
  pod 'Log'
  
