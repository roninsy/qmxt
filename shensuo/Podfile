  # 网络图片框架，
  #  KF.url(url)
  #  .placeholder(placeholderImage)
  #  .setProcessor(processor)
  #  .loadDiskFileSynchronously()
  #  .cacheMemoryOnly()
  #  .fade(duration: 0.25)
  #  .lowDataModeSource(.network(lowResolutionURL))
  #  .onProgress { receivedSize, totalSize in  }
  #  .onSuccess { result in  }
  #  .onFailure { error in }
  #  .set(to: imageView)
  pod 'Kingfisher', '~> 6.0'
  
